<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - My Application</title>
    <link rel="stylesheet" href="~/css/plugins.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <!-- Additional head elements can be added here -->
</head>
<body>
    <header id="header" class="dark">
        <div class="header-inner">
            <div class="container">
                <!-- Logo -->
                <div id="logo">
                    <a href="index.html">
                        <img src="~/images/TicketHubLogo.png" alt="TicketHub Logo" style="height: 50px;"> 
                    </a>
                </div>
                <!-- End: Logo -->
                <!-- Navigation -->
                <div id="mainMenu">
                    <div class="container">
                        <nav>
                            <ul>
                                <!-- HOME: Visible para todos los usuarios -->
                                <li><a href="/">Inicio</a></li>

                                <!-- Dashboard: Solo visible para Soporte y Administrador -->
                                @if (User.IsInRole("Administrador"))
                                {
                                    <li><a asp-controller="Usuario" asp-action="Index">Usuarios</a></li>
                                }

                                <!-- Crear Ticket: Visible para todos los usuarios autenticados -->
                                @if (User.IsInRole("Administrador"))
                                {
                                    <li><a asp-controller="Departamento" asp-action="Index">Departamentos</a></li>
                                }

                                <!-- Mis Tickets: Visible para todos los usuarios autenticados -->
                                @if (User.IsInRole("Administrador"))
                                {
                                    <li><a asp-controller="Rol" asp-action="Index">Roles</a></li>
                                }

                                <!-- Salir: Visible para todos los usuarios autenticados -->
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a href="/account/logout">SALIR</a></li>
                                }
                            </ul>


                        </nav>
                    </div>
                </div>
                <!-- End: Navigation -->
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer id="footer" style="position: fixed; bottom: 0; width: 100%; background: #333; color: white; text-align: center; padding: 10px 0;">
        <div class="copyright-content">
            <div class="container">
                <div class="copyright-text text-center">
                    &copy; 2024 TicketHub - Grupo 2 Universidad Fidelitas. Todos los derechos reservados.
                </div>
            </div>
        </div>
    </footer>
    <!-- end: Footer -->

    <!-- Scroll top -->
    <a id="scrollTop"><i class="icon-chevron-up"></i><i class="icon-chevron-up"></i></a>

    <!--Plugins-->
    <script src="~/js/jquery.js"></script>
    <script src="~/js/plugins.js"></script>

    <!--Template functions-->
    <script src="~/js/functions.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
