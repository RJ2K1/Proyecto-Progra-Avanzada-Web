@model List<FrontEnd.Models.DepartamentoViewModel>

@{
    ViewData["Title"] = "Lista de Departamentos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Page Content -->
<section id="page-content" class="no-sidebar">
    <div class="container">
        <!-- DataTable -->
        <div class="row mb-5">
            <div class="col-lg-12">
                <h4>Lista de Departamentos</h4>
                <table id="datatable" class="table table-bordered table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nombre del Departamento</th>
                            <th>Descripción</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var departamento in Model)
                        {
                            <tr>
                                <td>@departamento.NombreDepartamento</td>
                                <td>@departamento.Descripcion</td>
                                <td>
                                    <a class="ml-2" asp-controller="Departamento" asp-action="Edit" asp-route-id="@departamento.Id" data-toggle="tooltip" data-original-title="Edit"><i class="icon-edit"></i></a>
                                    <!-- Botón para activar el modal -->
                                    <a class="ml-2" href="#" data-toggle="modal" data-target="#deleteModal-@departamento.Id">
                                        <i class="icon-trash-2"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- end: DataTable -->
        <!-- Add Departamento Button -->
        <div class="row">
            <div class="col-lg-12">
                <a asp-controller="Departamento" asp-action="Create" class="btn btn-primary">Agregar Departamento</a>
            </div>
        </div>
    </div>
</section>
<!-- end: Page Content -->
<!-- Modal -->
@foreach (var departamento in Model)
{
    <div class="modal fade" id="deleteModal-@departamento.Id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel-@departamento.Id">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel-@departamento.Id">Confirmar Eliminación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Estás seguro de que quieres eliminar el departamento @departamento.NombreDepartamento?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <!-- Botón de confirmación que enviará el formulario -->
                    <button type="submit" form="deleteForm-@departamento.Id" class="btn btn-danger">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Formulario de eliminación para cada departamento -->
    <form asp-action="Delete" asp-controller="Departamento" asp-route-id="@departamento.Id" method="post" id="deleteForm-@departamento.Id">
        @Html.AntiForgeryToken()
    </form>
}
