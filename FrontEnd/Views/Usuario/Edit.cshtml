@model FrontEnd.Models.UsuarioUpdateViewModel

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body>
    <div class="body-inner">
        <section class="fullscreen" data-bg-parallax="/images/pages/BackGround.png">
            <div class="container container-fullscreen">
                <div class="text-middle">
                    <div class="row">
                        <div class="col-lg-14 center p-40 background-white b-r-6">
                            <h3>Editar Usuario</h3>
                            <p>Modifica la información del usuario.</p>
                            <form asp-action="Edit" asp-controller="Usuario" method="post" class="form-transparent-grey">
                                <!-- Campo oculto para el ID del usuario -->
                                <input type="hidden" asp-for="Id" />

                                <div class="form-group">
                                    <label for="Nombre">Nombre</label>
                                    <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre del Usuario" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="Email">Correo Electrónico</label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="Correo Electrónico" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Dropdown para Rol -->
                                <div class="form-group">
                                    <label for="RolId">Rol</label>
                                    <select asp-for="RolId" asp-items="@ViewBag.Roles" class="form-control">
                                        <option value="">Seleccione un rol</option>
                                    </select>
                                    <span asp-validation-for="RolId" class="text-danger"></span>
                                </div>

                                <!-- Dropdown para Departamento -->
                                <div class="form-group">
                                    <label for="DepartamentoId">Departamento</label>
                                    <select asp-for="DepartamentoId" asp-items="@ViewBag.Departamentos" class="form-control">
                                        <option value="">Seleccione un departamento</option>
                                    </select>
                                    <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                                </div>

                                <!-- Botones de acción -->
                                <div class="form-group">
                                    <button type="submit" class="btn">Actualizar Usuario</button>
                                    <a class="btn btn-danger m-l-10" asp-action="Index">Cancelar</a>
                                </div>
                            </form>
                            <!-- End: Form -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
